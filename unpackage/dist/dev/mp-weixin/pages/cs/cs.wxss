@-webkit-keyframes dice {
from {
    -webkit-transform: rotateZ(0deg);
            transform: rotateZ(0deg);
}
to {
    -webkit-transform: rotateZ(360deg);
            transform: rotateZ(360deg);
}
}
@keyframes dice {
from {
    -webkit-transform: rotateZ(0deg);
            transform: rotateZ(0deg);
}
to {
    -webkit-transform: rotateZ(360deg);
            transform: rotateZ(360deg);
}
}
.animations {
  left: 44%;
  bottom: 0rpx;
  position: absolute;
}
.animationstrue {
  -webkit-animation-name: dice;
          animation-name: dice;
  -webkit-animation-duration: 1.4s;
          animation-duration: 1.4s;
  transition: bottom 1.2s,left 1.2s;
}
.bot {
  position: fixed;
  padding-left: 30rpx;
  box-sizing: border-box;
  padding-right: 30rpx;
  align-items: center;
  width: 100%;
  bottom: 50rpx;
  display: flex;
  justify-content: space-between;
}
.dice {
  height: 100vh;
  position: relative;
  /* background-position: center; */
  background-size: 100% 100%;
  background-repeat: no-repeat;
  overflow: hidden;
  background-image: url("https://pic.imgdb.cn/item/63b2d99f5d94efb26f593b4c.jpg");
}
.scores {
  color: #fff;
  font-size: 40rpx;
}
.add {
